pipeline {
    agent any
    tools { 
            maven 'M3' 
       
    }
    stages {
        stage ('Initialize') {
            steps {
                bash '''
                    echo "PATH = ${PATH}"
                   
                ''' 
            }
        }

        stage ('Build') {
            steps {
                echo 'This is a minimal pipeline.'
            }
        }
    }
}
